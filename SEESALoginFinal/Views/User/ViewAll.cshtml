@model List<UserModel>
@{
    <h1>Users in database</h1>
    <a asp-action="CreatePage">Create new user</a>

    <table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td>Date Created</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.DateCreated</td>
                <td>
                <a asp-action="EditPage" asp-route-id="@user.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
}
