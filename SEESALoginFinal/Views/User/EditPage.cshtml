@model SEESALoginFinal.Models.UserModel
@{
    <h1>Edit a User</h1>
    <form asp-action="Edit">
        <p>
            <label class="form-label" for="id">Id :</label>
            <input class="form-control" type="text" name="Id" value="@Model.Id" readonly required/>
        </p>
        <p>
            <label class="form-label" for="email">Email :</label>
            <input class="form-control" type="text" name="email" value="@Model.Email" required/>
        </p>
        <p>
            <label class="form-label" for="password">Password :</label>
            <input class="form-control" type="password" name="password" placeholder="Enter new password" required/>
        </p>
        <p>
            <input class="btn btn-primary" type="submit" value="Edit"/>
        </p>
    </form>
}
